<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Login</title>
    <link rel="stylesheet" href="/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="LoginOrRegisterPage LoginPage">
    <form action="/users/login" method="POST" class="RegisterPageForm">
         <!--This will only trigger if there is a login error-->
         <% if(typeof error !== "undefined") {%> 
            <div class="alert alert-danger LoginOrRegisterAlert" role="alert">
                <%= error %>
            </div>
        <% } %>
        <!-- This will only trigger if the user successfully creates a new account -->
        <% if (typeof success !== "undefined") { %> 
            <div class="alert alert-success LoginOrRegisterAlert" role="alert">
                <%= success %>
            </div>
        <% } %>
        <h1 class="LoginRegisterPageH1">Login to Your Account</h1>
        <div class="form-group">
            <label for="username" class="LoginOrRegisterPageLabel">Username:</label>
            <input type="text" id="username" name="username" class="LoginRegisterInput" required>
        </div>
        <div class="form-group position-relative">
            <label for="password" class="LoginOrRegisterPageLabel">Password:</label>
            <input type="password" id="password" name="password" class="passwordInput" required>
            <span class="toggle-password" onclick="togglePassword('password')">&#128065;</span> <!-- Eye Icon -->
        </div>        
        <button type="submit" class="LoginRegisterBtn">Login</button>
        <p class="LoginOrRegisterPtag">Don't have an account? <a href="/users/register">Create one here</a>.</p>
    </form>

    <!-- bootstrap links -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

<script>
    function togglePassword(inputId) {
        const input = document.getElementById(inputId);
        const icon = input.nextElementSibling;
        if (input.type === "password") {
            input.type = "text";
            icon.textContent = 'üôà'; // Change icon to a "closed eye" when showing password
        } else {
            input.type = "password";
            icon.textContent = 'üëÅ'; // Change icon to an "open eye" when hiding password
        }
    }
    </script>
    