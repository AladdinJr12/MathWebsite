<script>
    function togglePassword(inputId) {
        const input = document.getElementById(inputId);
        const icon = input.nextElementSibling;
        if (input.type === "password") {
            input.type = "text";
            icon.textContent = 'üôà'; // Change icon to a "closed eye" when showing password
        } else {
            input.type = "password";
            icon.textContent = 'üëÅ'; // Change icon to an "open eye" when hiding password
        }
    }
    </script>
    