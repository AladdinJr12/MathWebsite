    <div class="LoginOrRegisterPage LoginPage">
        <form action="/users/login" method="POST" class="RegisterPageForm">
             <!--This will only trigger if there is a login error-->
             <% if(typeof error !== "undefined") {%> 
                <div class="alert alert-danger LoginOrRegisterAlert" role="alert">
                    <%= error %>
                </div>
            <% } %>
            <!-- This will only trigger if the user successfully creates a new account -->
            <% if (typeof success !== "undefined") { %> 
                <div class="alert alert-success LoginOrRegisterAlert" role="alert">
                    <%= success %>
                </div>
            <% } %>
            <h1 class="LoginRegisterPageH1">Login to Your Account</h1>
            <div class="form-group">
                <label for="username" class="LoginOrRegisterPageLabel">Username:</label>
                <input type="text" id="username" name="username" class="LoginRegisterInput" required>
            </div>
            <div class="form-group position-relative">
                <label for="password" class="LoginOrRegisterPageLabel">Password:</label>
                <input type="password" id="password" name="password" class="passwordInput" required>
                <span class="toggle-password" onclick="togglePassword('password')">&#128065;</span> <!-- Eye Icon -->
            </div>        
            <button type="submit" class="LoginRegisterBtn">Login</button>
            <p class="LoginOrRegisterPtag">Don't have an account? <a href="/users/register">Create one here</a>.</p>
        </form>
    </div>

